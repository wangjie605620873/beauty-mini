<!--pages/map/index.wxml-->
<!-- map.wxml -->
<map id="map"
 longitude="{{ longitude}}"
 latitude="{{latitude}}" 
 scale="18" 
 controls="{{controls}}" 
 bindcontroltap="controltap" 
 markers="{{markers}}" 
 bindmarkertap="markertap" 
 polyline="{{polyline}}" 
 bindregionchange="regionchange" 
 show-location 
 enable-zoom
 enable-scroll
 enable-rotate
 style="width: 100%; height: 100%;">
</map>